@model IEnumerable<MyClass.Model.ProductInfo>

@{
    var item = ViewBag.Categories;
}
@{
    ViewBag.Title = item.Name;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<body>
    <!-- ================ category section start ================= -->
    <section class="section-margin--small mb-5">
        <div class="container">
            <div class="row">
                <div class="col-xl-3 col-lg-4 col-md-5">
                    @* Category List Begin *@
                    @Html.Action("CategoriesList", "Module")
                </div>
                @* Category List End *@

                <div class="col-xl-9 col-lg-8 col-md-7">
                    <!-- Start Best Seller -->
                    <section class="lattest-product-area pb-40 category-list">
                        <div class="row">
                            @foreach (var productItem in Model)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="card text-center card-product">
                                        <div class="card-product__img">
                                            <img class="card-img" style="min-height:325px" src="Public/img/product/@productItem.Image" alt="">
                                            <ul class="card-product__imgOverlay">
                                                <li><a class="btn btn-primary text-light"><i class="ti-search"></i></a></li>
                                                <li>
                                                    <a href="@Url.Action("AddCart","Giohang", new { productid = productItem.Id})" class="btn btn-primary">
                                                        <span class="custom-button">
                                                            <i class="ti-shopping-cart"></i>
                                                        </span>
                                                    </a>
                                                </li>
                                                <li><a class="btn btn-primary  text-light"><i class="ti-heart"></i></a></li>
                                            </ul>
                                        </div>
                                        <div class="card-body">
                                            <h4 class="card-product__title"><a href="@productItem.Slug">@productItem.Name</a></h4>
                                            <p strong class="card-product__price text-success">@string.Format("{0:0,0}", @productItem.Price)<sup>đ</sup></p>
                                            <del class="text-danger"><span class="danger card-product__price text-danger">@string.Format("{0:0,0}", @productItem.SalePrice)</span></del><sup>đ</sup>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </section><!-- End Best Seller -->
                </div>
            </div>
        </div>
    </section>
    <!-- ================ category section end ================= -->
</body>
