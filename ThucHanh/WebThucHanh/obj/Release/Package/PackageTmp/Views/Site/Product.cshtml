@model PagedList.IPagedList<MyClass.Model.ProductInfo>
@using PagedList.Mvc
@{
    var item = ViewBag.Categories;
}
<style>
    .pagination-container {
        margin-top: 20px;
    }

    .pagination {
        display: flex;
        justify-content: center;
    }

        .pagination a {
            font-size: 1rem;
            padding: 8px 16px;
            margin: 0 4px;
            border: 1px solid #ddd;
            color: #aaa;
            text-decoration: none;
            background-color: transparent;
            border-radius:50%;
            transition: 0.2s ease-in-out;
        }

            .pagination a:hover {
                background-color: transparent;
                box-shadow: 0px 0px 4px 2px #00c0f3;
            }

        .pagination .disabled {
            color: #007bff;
            pointer-events: none;
        }
        .pagination li.active {
            color: #00c0f3;
        }
            .pagination li.active a {
                border: 1px solid #00c0f3;
            }
</style>
<section class="section-margin calc-60px">
    <div class="container">
        <div class="section-intro pb-60px">
            <h2>Tất cả <span class="section-intro__style">sản phẩm</span></h2>
        </div>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card text-center card-product">
                        <div class="card-product__img">
                            <img class="card-img" style="width:15rem; height:15rem" src="~/Public/img/product/@product.Image" alt="">
                            <ul class="card-product__imgOverlay">
                                <li><a class="btn btn-primary"><i class="ti-search text-white"></i></a></li>
                                <li>
                                    <a href="@Url.Action("AddCart","Giohang", new { productid = product.Id})" class="btn btn-primary">
                                        <span class="custom-button">
                                            <i class="ti-shopping-cart"></i>
                                        </span>
                                    </a>
                                </li>
                                <li><a class="btn btn-primary"><i class="ti-heart text-white"></i></a></li>
                            </ul>
                        </div>
                        <div class="card-body">
                            <p>@product.CatName</p>
                            <h4 class="card-product__title"><a href="@product.Slug">@product.Name</a></h4>
                            <p strong class="card-product__price text-success">@string.Format("{0:0,00}", @product.SalePrice)<sup>đ</sup></p>
                            <del class="text-danger"><span class="danger card-product__price text-danger">@string.Format("{0:0,00}", @product.Price)</span></del><sup>đ</sup>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Hiển thị phân trang -->
        <div class="pagination-container">
            @Html.PagedListPager(Model, page => Url.Action("", new { page = page }))
        </div>
    </div>
</section>
