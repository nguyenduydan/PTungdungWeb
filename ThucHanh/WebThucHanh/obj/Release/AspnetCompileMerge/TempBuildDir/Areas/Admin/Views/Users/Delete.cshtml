@model MyClass.Model.Users
@{
    ViewBag.Title = "Danh sách sản phẩm đã xóa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content my-2">
            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">DANH SÁCH TÀI KHOẢN</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Trash","Users")" class="btn-sm btn-info"> <i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                        </div>
                    </div><!-- /.class-row -->
                </div><!-- /.card-header -->
                <div class="card-body">
                    @*Hien thi noi dung thong bao ngay ben tren bang du lieu*@
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ID)</th>
                            <th>@Html.DisplayNameFor(model => model.UserName)</th>
                            <th>@Html.DisplayNameFor(model => model.Fullname)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.Role)</th>
                            <th>@Html.DisplayNameFor(model => model.CreateAt)</th>
                            <th>@Html.DisplayNameFor(model => model.UpdateAt)</th>
                            <th>Chức năng</th>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => modelItem.ID)</td>
                            <td>@Html.DisplayFor(modelItem => modelItem.UserName)</td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Fullname)
                            </td>
                            <td>@Html.DisplayFor(modelItem => modelItem.Email)</td>
                            <td>@Html.DisplayFor(modelItem => modelItem.Phone)</td>
                            <td>@Html.DisplayFor(modelItem => modelItem.Role)</td>
                            <th>@Html.DisplayFor(modelItem => modelItem.CreateAt)</th>
                            <th>@Html.DisplayFor(modelItem => modelItem.UpdateAt)</th>
                            <td>
                                <button class="btn-sm btn-danger" type="submit" name="Delete"> Xóa [Delete] <i class="fa fa-trash"></i> </button>
                            </td>
                        </tr>
                    </table>
                </div><!-- /.card-body -->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
}
